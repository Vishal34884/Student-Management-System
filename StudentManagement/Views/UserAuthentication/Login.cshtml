@model StudentManagement.Models.DTO.LoginModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>login</title>

    <style>

        form {
            border: 3px solid #f1f1f1;
            width: 45%;
            margin: auto;
            margin-top: 10%;
        }

        input[type=text], input[type=password] {
            width: 150%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            box-sizing: border-box;
        }

        button {
            background-color: green;
            color: white;
            padding: 14px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            border-radius: 2px;
        }

        .container {
            padding: 16px;
        }
        .log{
            height:30%;
            width:25%;
            float : right;
        }

        .msg {
            padding: 0px;
        }


        .err {
            color: red;
        }
    </style>

</head>
<body>
    <h1 style="text-align: center;">Student Management Login</h1>
    <form asp-action="Login" method="post">
        <div class="container">
            <table>
                <tr>
                    <td><label asp-for="Username"><b>Username</b></label></td>
                    <td><input type="text" asp-for="Username" placeholder="Enter Username"></td>
                </tr>
                <tr>
                    <td colspan="2"><div class="msg"><span class="err" asp-validation-for="Username"></span></div></td>
                </tr>
                <tr>
                    <td><label asp-for="Password"><b>Password</b></label></td>
                    <td><input type="password" asp-for="Password" placeholder="Enter Password"></td>
                </tr>
                <tr>
                    <td colspan="2"><div class="msg"><span asp-validation-for="Password" class="err"></span></div></td>
                </tr>
                <tr>
                    <td>
                        @if (TempData["msg"] != null)
                        {
                            <div class="msg">@TempData["msg"]</div>
                        }<br>
                    </td>
                </tr>
                <tr>
                    <td colspan="2"><button type="submit">Login</button></td>
                </tr>
                <img class="log" src="image/user.png" alt="login">
            </table>
    </form>
</body>
</html>

